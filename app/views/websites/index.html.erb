<div class="container mt-4">
  <div class="card mb-4">
    <div class="card-body" id="new_website">
      <%= render partial: "form", website: @website %>
    </div>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Total links</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody id="websites-list">
        <%= render @websites %>
      </tbody>
    </table>
  </div>

  <div class="mt-3">
    <%= paginate @websites %>
  </div>

</div>

